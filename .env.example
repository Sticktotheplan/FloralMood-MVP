# FloralMood MVP - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# ===================================
# Supabase (Database & Auth)
# ===================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===================================
# OpenAI (DALL-E 3 Image Generation)
# ===================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# ===================================
# Anthropic (Claude Meta-Prompt)
# ===================================
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# ===================================
# Stripe (Payments)
# ===================================
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===================================
# SendGrid (Email Notifications)
# ===================================
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG...

# ===================================
# Cloudinary (Image Storage)
# ===================================
# Get from: https://console.cloudinary.com/
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===================================
# Application Settings
# ===================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

# ===================================
# Security
# ===================================
JWT_SECRET=your-random-secret-key-here-change-in-production
SESSION_SECRET=your-session-secret-here

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===================================
# AI Generation Limits
# ===================================
DAILY_AI_BUDGET_CAP=50.00
PER_FLORIST_DAILY_CAP=20.00
MAX_IMAGES_PER_MOODBOARD=12

# ===================================
# Monitoring (Optional)
# ===================================
# SENTRY_DSN=https://...@sentry.io/...
# LOGTAIL_SOURCE_TOKEN=...
